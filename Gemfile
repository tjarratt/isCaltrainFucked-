source 'https://rubygems.org'

gem 'rails', '~> 3.2.12'
gem 'pg'
gem 'unicorn'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'httparty'
gem 'ri_cal'
gem 'sqlite3'

group :development, :test do
  gem 'rspec-rails'
  gem 'pry'
  gem 'pry-nav'
  gem 'powder'
end

gem 'twitter'
gem 'sentimental'
